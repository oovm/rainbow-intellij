<idea-plugin>
	<id>com.github.voml.rainbow_intellij</id>
	<name>JSS Support</name>
	<vendor>voml</vendor>
	<!-- Product and plugin compatibility requirements -->
	<!-- https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html -->
	<depends>com.intellij.modules.platform</depends>
	<!--    <depends optional="true" config-file="plugin-with-rust.xml">org.rust.lang</depends>-->
	<resource-bundle>messages.JssBundle</resource-bundle>
	<extensions defaultExtensionNs="com.intellij">
		<fileType
			name="JSS"
			language="Rainbow"
			extensions="jss"
			implementationClass="com.github.voml.rainbow_intellij.ide.file_view.JssFileType"
			fieldName="INSTANCE"
		/>
		<lang.parserDefinition
			language="Rainbow"
			implementationClass="com.github.voml.rainbow_intellij.language.psi.RbParserDefinition"
		/>
		<projectViewNestingRulesProvider implementation="com.github.voml.rainbow_intellij.ide.file_view.JssFileGroup"/>
		<!-- Highlight -->
		<additionalTextAttributes scheme="Default" file="colors/JssDefault.xml"/>
		<additionalTextAttributes scheme="Darcula" file="colors/JssDarcula.xml"/>
		<colorSettingsPage implementation="com.github.voml.rainbow_intellij.ide.highlight.JssColorSettingsPage"/>
		<highlightVisitor implementation="com.github.voml.rainbow_intellij.ide.highlight.JssHighlightVisitor"/>
		<lang.syntaxHighlighter
			language="Rainbow"
			implementationClass="com.github.voml.rainbow_intellij.ide.highlight.JssSyntaxHighlighter"
		/>
		<!-- Formatter -->
		<lang.formatter
			language="Rainbow"
			implementationClass="com.github.voml.rainbow_intellij.ide.formatter.JssFormattingModelBuilder"
		/>
		<lang.commenter
			language="Rainbow"
			implementationClass="com.github.voml.rainbow_intellij.ide.formatter.JssCommenter"
		/>
		<lang.smartEnterProcessor
			language="Rainbow"
			implementationClass="com.github.voml.rainbow_intellij.ide.formatter.JssSmartEnter"
		/>
		<!-- Document -->
		<!--documentationProvider implementation="com.github.voml.jss_intellij.ide.doc.JssDocumentationExtender"-->
		<psi.referenceContributor implementation="com.github.voml.rainbow_intellij.ide.doc.RbUrlReferenceContributor"/>
		<lang.documentationProvider
			language="Rainbow"
			implementationClass="com.github.voml.rainbow_intellij.ide.doc.JssDocumentationProvider"
		/>

		<lang.braceMatcher
			language="Rainbow"
			implementationClass="com.github.voml.rainbow_intellij.ide.matcher.JssBraceMatcher"
		/>
		<lang.quoteHandler
			language="Rainbow"
			implementationClass="com.github.voml.rainbow_intellij.ide.matcher.RbQuoteHandler"
		/>
		<lang.foldingBuilder
			language="Rainbow"
			implementationClass="com.github.voml.rainbow_intellij.ide.matcher.JssFoldingBuilder"
		/>
		<indexPatternBuilder
			implementation="com.github.voml.rainbow_intellij.ide.todo.VomlTodoIndexPatternBuilder"
		/>
		<todoIndexer
			filetype="JSS"
			implementationClass="com.github.voml.rainbow_intellij.ide.todo.VomlTodoIndexer"
		/>
		<completion.contributor
			language="Rainbow"
			implementationClass="com.github.voml.rainbow_intellij.ide.completion.RbOptionCompletionContributor"
		/>

		<annotator language="Rainbow" implementationClass="com.github.voml.rainbow_intellij.ide.annotator.LiteralChecker"/>

		<langCodeStyleSettingsProvider
			implementation="com.github.voml.rainbow_intellij.ide.codeStyle.RbLanguageCodeStyleSettingsProvider"
		/>

	</extensions>
	<actions>
		<action id="NewJssFile" class="com.github.voml.rainbow_intellij.ide.actions.JssCreateFile">
			<add-to-group group-id="NewGroup" anchor="before" relative-to-action="NewHtmlFile"/>
		</action>
		<action id="jss.JssConvertJson"
		        class="com.github.voml.rainbow_intellij.ide.actions.JssConvertJson"/>
		<group id="jss.JssGenerator" popup="true" text="JssGenerator">
			<reference ref="NewJssFile"/>
			<reference ref="jss.JssConvertJson"/>
			<add-to-group group-id="EditorPopupMenu" anchor="after" relative-to-action="Github.Create.Gist"/>
			<add-to-group group-id="ProjectViewPopupMenu" anchor="after" relative-to-action="Github.Create.Gist"/>
			<add-to-group group-id="EditorTabPopupMenu" anchor="after" relative-to-action="Github.Create.Gist"/>
			<add-to-group group-id="ConsoleEditorPopupMenu" anchor="after" relative-to-action="Github.Create.Gist"/>
		</group>
	</actions>
</idea-plugin>
